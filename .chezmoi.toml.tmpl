{{ $name := promptStringOnce "name" -}}
{{ $email := promptStringOnce "email" -}}
{{ $navi_openai_token := promptStringOnce "NaVi Open AI token" -}}
{{ $gpgsignkey := promptStringOnce "GPG signing key ID" -}}
{{ $bwSessionPath := promptStringOnce "Bitwarden session token path" -}}

[data]
    name = {{ $name | quote }}
    email = {{ $email | quote }}
    navi_openai_token = {{ $navi_openai_token | quote }}
    gpgsignkey = {{ $gpgsignkey | quote }}
    bwSessionPath = {{ $bwSessionPath | quote }}

[diff]
    pager = "delta"
    command = "delta"
    args = ["{{ `{{ .Destination }}` }}", "{{ `{{ .Target }}` }}"]
[merge]
    command = "nvim"
    args = ["-d", "{{ `{{ .Destination }}` }}", "{{ `{{ .Source }}` }}", "{{ `{{ .Target }}` }}"]
