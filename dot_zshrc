# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH
source '/opt/kube-ps1/kube-ps1.sh'

# Path to your oh-my-zsh installation.
export ZSH="${HOME}/.oh-my-zsh"

# Setting env
export OK_DIR=${HOME}/origo

export LC_ALL=en_US.UTF-8
export EDITOR=nvim
export VISUAL=nvim
export VDIRSYNCER_CONFIG=${HOME}/life/contacts/.vdirsyncer/config

export XDG_DESKTOP_DIR="/tmp"
export XDG_DOWNLOAD_DIR="$HOME/downloads"
export XDG_CONFIG_HOME="$HOME/.config"

export HELM_HOME="$HOME/.config/helm"

export DENO_INSTALL=$HOME/.local/share/deno
export PATH=$HOME/.local/bin:$HOME/.local/share/npm/modules/bin:$PATH::~/.krew/bin:$DENO_INSTALL/bin:/opt/android-sdk/platform-tools:/usr/local/bin:${HOME}/origo/kjøremiljø/golden-path-iac/bin
export PATH=$PATH:$HOME/.local/lib/n/bin

# Fix java applications in wayland
export _JAVA_AWT_WM_NONREPARENTING=1

# Wayland
export MOZ_ENABLE_WAYLAND=1
export MOZ_DBUS_REMOTE=1 # Enables opening links in slack somehow

export XDG_SESSION_TYPE=wayland
export XDG_CURRENT_DESKTOP=sway

#export WAYLAND_DEBUG=1
#export GDK_BACKEND=wayland

export N_PREFIX=~/.local/lib/n

# FZF for vim
if type rg &> /dev/null; then
	export FZF_DEFAULT_COMMAND='rg --files'
	export FZF_DEFAULT_OPTS='-m'
fi

# Keys
export GPG_TTY=$(tty)
eval $(keychain --eval --quiet --agents gpg,ssh)
export SSH_AGENT_PID=""
export SSH_AUTH_SOCK="${XDG_RUNTIME_DIR}/gnupg/S.gpg-agent.ssh"

# Set name of the theme to load --- if set to "random", it will
# load a random theme each time oh-my-zsh is loaded, in which case,
# to know which specific one was loaded, run: echo $RANDOM_THEME
# See https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
ZSH_THEME="julius"

# Set list of themes to pick from when loading at random
# Setting this variable when ZSH_THEME=random will cause zsh to load
# a theme from this variable instead of looking in ~/.oh-my-zsh/themes/
